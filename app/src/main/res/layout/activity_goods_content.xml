<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.baway.yunifang.activity.GoodsContentActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/good_content_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_normal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品详情"
            android:textSize="15sp"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/goods_shopping_cart"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_normal"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"></View>
    <ScrollView
        android:id="@+id/good_content_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/good_content_images"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:isAutoPlay="false"
                ></com.stx.xhb.xbanner.XBanner>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/good_content_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="ssssssssssssssssssss"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/colorBlack"
                    android:layout_gravity="center_vertical"></View>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="收藏"
                    android:gravity="center"
                    android:drawableTop="@mipmap/collection"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/good_content_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="￥ 50"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/good_content_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥ 100"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/coupons"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/pledge"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="运费"/>
                    <TextView
                        android:id="@+id/good_content_yunfei"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="￥10.00"
                        android:textColor="@color/colorAccent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="销量"/>
                    <TextView
                        android:id="@+id/good_content_xiaoliang"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="￥10.00"
                        android:textColor="@color/colorAccent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="收藏"/>
                    <TextView
                        android:id="@+id/good_content_shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="￥10.00"
                        android:textColor="@color/colorAccent"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorDarkGray"></View>
            <ListView
                android:id="@+id/good_content_listView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:dividerHeight="0dp"
                android:divider="@null"></ListView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="推荐商品"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"/>
            <GridView
                android:id="@+id/good_content_gridView"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:numColumns="3"></GridView>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorDarkGray"></View>
            <RadioGroup
                android:id="@+id/good_content_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/good_content_rb_xq"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="产品详情"
                    android:textColor="@drawable/text_selector"
                    android:gravity="center"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/good_content_rb_cs"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="产品参数"
                    android:textColor="@drawable/text_selector"
                    android:gravity="center"/>
                <RadioButton
                    android:id="@+id/good_content_rb_pl"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="产品参数"
                    android:textColor="@drawable/text_selector"
                    android:gravity="center"/>
            </RadioGroup>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="635dp">
                <ListView
                    android:id="@+id/good_content_xq_lv"
                    android:layout_width="match_parent"
                    android:layout_height="635dp"
                    android:divider="@null"
                    android:dividerHeight="0dp">
                </ListView>
                <ListView
                    android:id="@+id/good_content_cs_lv"
                    android:layout_width="match_parent"
                    android:layout_height="635dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:visibility="gone"></ListView>
                <ListView
                    android:id="@+id/good_content_pl_lv"
                    android:layout_width="match_parent"
                    android:layout_height="635dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:visibility="gone"></ListView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/public_contact_service_icon"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/good_content_add_cart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/colorYellow"
                android:text="加入购物车"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:text="立即购买"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
