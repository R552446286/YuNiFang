<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp"
    >
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:orientation="vertical">
        <View
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"></View>
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="288dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            >
            <View
                android:layout_width="1dp"
                android:layout_height="288dp"
                android:background="@color/colorBlack"></View>
            <LinearLayout
                android:layout_width="218dp"
                android:layout_height="288dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item5_iv"
                    android:layout_width="218dp"
                    android:layout_height="188dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/item5_efficacy"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="sssssssss"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/item5_name"
                    android:layout_width="218dp"
                    android:layout_height="50dp"
                    android:text="ssssssssssssssssssssssssssssssssssssss"
                    android:maxEms="12"
                    android:singleLine="false"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item5_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="sssssssss"
                        android:textColor="@color/colorRed"
                        android:textSize="12sp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/item5_market"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="sssssssss"
                        android:textSize="10sp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="288dp"
                android:background="@color/colorBlack"></View>
        </LinearLayout>
        <View
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            android:layout_gravity="center_horizontal"></View>
    </LinearLayout>
</LinearLayout>