<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/user_center_bg"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/user_head_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_icon_no_sets"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/user_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_setting"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/user_login"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="登录"
        android:textColor="@color/colorBlue"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/login_bg"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/user_fukuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待付款"
            android:textSize="12sp"
            android:drawableTop="@mipmap/wait_pay"
            android:gravity="center"/>
        <TextView
            android:id="@+id/user_fahuo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待发货"
            android:textSize="12sp"
            android:drawableTop="@mipmap/wait_send_good"
            android:gravity="center"/>
        <TextView
            android:id="@+id/user_shouhuo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待收货"
            android:textSize="12sp"
            android:drawableTop="@mipmap/wait_receive_good"
            android:gravity="center"/>
        <TextView
            android:id="@+id/user_pingjia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待评价"
            android:textSize="12sp"
            android:drawableTop="@mipmap/wait_evaluate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/user_tuikuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="退款"
            android:textSize="12sp"
            android:drawableTop="@mipmap/wait_refund"
            android:gravity="center"/>
    </LinearLayout>
    <ListView
        android:id="@+id/user_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>